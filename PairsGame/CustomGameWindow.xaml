<Window x:Class="PairsGame.CustomGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PairsGame"
        mc:Ignorable="d"
        Title="CustomGameWindow" Height="300" Width="500">
    <Grid Margin="10,10,0,0">
        <Label Content="Number of Rows: " HorizontalAlignment="Left" Margin="70,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Number of Columns: " HorizontalAlignment="Left" Margin="70,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtRowsCustom" HorizontalAlignment="Left" Margin="179,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtColsCustom" HorizontalAlignment="Left" Margin="198,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCustom" Content="Generate Custom Game" HorizontalAlignment="Left" Margin="139,0,0,0" VerticalAlignment="Center" Height="36" Width="143" Click="GenerateCustom_Click"/>

    </Grid>
</Window>
